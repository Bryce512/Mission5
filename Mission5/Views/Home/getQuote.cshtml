@{
    ViewData["Title"] = "Bryce's Garage";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

<div>
    <div class="text-center">
        <h1>Repair Labor Cost Calculator</h1>
        <h5>Want to learn more about car repairs? Enter the number of hours you need, and we'll calculate your total tutoring cost.</h5>
    </div>
    <form id="calcForm">
        <label for="hours">Number of Hours:</label>
        <input type="number" id="hours" name="hours" min="0" step="0.5" required>

        <label for="rate">Hourly Rate ($/hr):</label>
        <input type="text" id="rate" value="40" readonly>

        <button type="button" id="calculateBtn">Calculate Total</button>

        <label for="total">Total Cost ($):</label>
        <input type="text" id="total" readonly>
    </form>
    <br/>
    <br/>
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>


